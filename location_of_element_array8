package javaclosedbook;

import java.util.Scanner;

public class location_of_element_array8 {

	public static void main(String[] args) {
		int array[]=new int[5];
		Scanner s =new Scanner(System.in);
		System.out.println("enter elements of array");
		for (int i=0; i<array.length; i++) {
			array[i] = s.nextInt();
		}
		System.out.println("Now enter any element from above to find the index of that element");
		int find =s.nextInt();
		for(int i=0; i<array.length; i++) {
		if(array[i]==find) {
		System.out.println("The index of "+find+" is at "+i);	
		}
		}

	}

}
